<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment" >

    <TextView
        android:id="@+id/eventText"
        android:layout_width="61dp"
        android:layout_height="30dp"
        android:text="EVENTS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/culturalButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="53dp" />

    <Button
        android:id="@+id/educationalButton"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:text="EDUCATIONAL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/culturalButton"
        app:layout_constraintBottom_toTopOf="@id/religiousButton"
        app:layout_constraintTop_toBottomOf="@id/eventText"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="216dp" />

    <Button
        android:id="@+id/culturalButton"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:text="CULTURAL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/educationalButton"
        app:layout_constraintBottom_toTopOf="@id/sportButton"
        app:layout_constraintTop_toBottomOf="@id/eventText"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="216dp" />

    <Button
        android:id="@+id/sportButton"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:text="SPORT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/culturalButton"
        app:layout_constraintRight_toLeftOf="@id/religiousButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="429dp" />

    <Button
        android:id="@+id/religiousButton"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:text="RELIGIOUS"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/educationalButton"
        app:layout_constraintLeft_toRightOf="@id/sportButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="429dp" />
</androidx.constraintlayout.widget.ConstraintLayout>