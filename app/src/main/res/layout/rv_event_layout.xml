<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="121dp"
            android:layout_height="121dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:src="@drawable/eventicon"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="8dp"
            card_view:layout_constraintLeft_toRightOf="@id/eventImage"
            card_view:layout_constraintTop_toTopOf="parent"
            android:text="Event Name"
            />
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="8dp"
            card_view:layout_constraintLeft_toRightOf="@id/eventImage"
            card_view:layout_constraintTop_toBottomOf="@id/eventName"
            android:text="Event Date"
            />
        <TextView
            android:id="@+id/eventDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="8dp"
            card_view:layout_constraintLeft_toRightOf="@id/eventDate"
            card_view:layout_constraintTop_toBottomOf="@id/eventName"
            android:text="Event Day"
            />
        <TextView
            android:id="@+id/eventDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="8dp"
            card_view:layout_constraintLeft_toRightOf="@id/eventImage"
            card_view:layout_constraintTop_toBottomOf="@id/eventDate"
            android:text="Event Details"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>




